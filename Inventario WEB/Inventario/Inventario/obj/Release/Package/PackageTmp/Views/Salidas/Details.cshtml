@model Inventario.Models.Salidas

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Salidas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.productosID)
        </dt>

        @{
            Inventario.DAL.Context db = new Inventario.DAL.Context();
        }

        <dd>
            @db.productos.Find(model.productosID).descripcion
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>

        <dd>
            @Inventario.Models.Helpers.mostrarFecha(model.fecha)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SalidasID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
